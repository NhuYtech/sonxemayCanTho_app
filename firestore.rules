rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Accounts collection - allow authenticated users to read
    match /accounts/{accountId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == accountId;
    }
    
    // Rooms collection - chat rooms
    match /rooms/{roomId} {
      // Allow read/write if user is a participant
      allow read, write: if request.auth != null && 
                            request.auth.uid in resource.data.participants;
      // Allow create if user is one of the participants
      allow create: if request.auth != null && 
                       request.auth.uid in request.resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null && 
                       request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.participants;
        allow create: if request.auth != null && 
                         request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.participants;
        allow update, delete: if request.auth != null && 
                                 request.auth.uid == resource.data.senderId;
      }
    }
    
    // Orders collection (if needed)
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}